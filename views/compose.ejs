<%- include('partials/header') -%> 
<h1>Compose</h1>
<form action="/compose" method="post">

<div class="form-group">
<label for="composeTitle">Title:</label>
<input type="text" name="postTitle" id="composeTitle" class="form-control" placeholder="write here">
</div>

<div class="form-group">
<label for="composebody">Body:</label>
<textarea name="postBody" class="form-control" id="composebody"></textarea>
</div>
<button type="submit"  class="btn btn-primary">Publish</button>
</form>
<%- include('partials/footer') -%>
 